<div class="d-flex justify-content-center">
  <form method="post" action="/users/signUp">
    <p class="mt-4">Registration</p>
    {{#if error}}
    <p class="mt-2 text-danger">{{error}}</p>
    {{/if}}

    <div class="form-group">
    <input type="login" name="login" class="form-control" placeholder="Login" id="exampleInputEmail1">
    </div>
    <div class="form-group">
    <input type="email" name="email" class="form-control" placeholder="Email" id="exampleInputEmail1">
    </div>
      <div class="form-group">
      <input type="password" name="password" class="form-control" placeholder="Password" id="exampleInputEmail1">
   </div>
  
    <button type="submit" class="btn btn-dark">Register</button>
  </form>
</div>

